/* 支付豆子 */

.container {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-modal {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 750rpx;
  height: 428rpx;
  background: #fff;
}

.title {
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  position: relative;
  border-bottom: 2rpx solid #e6e6e6;
  font-size: 36rpx;
}

/* 关闭模态框按钮 */

.del-icon {
}

.del-icon image {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 35rpx;
  top: 35rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content text:first-child {
  font-size: 60rpx;
  color: #4f93fd;
  margin-bottom: 12rpx;
  margin-top: 50rpx;
}

.content text:last-child {
  font-size: 36rpx;
  color: #a3a3a3;
}

.btn-toolbar {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
}

.btn-toolbar view {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
}

.btn-toolbar view:first-child {
  background: #d9d9d9;
}

.btn-toolbar view:last-child {
  background: #4f93fd;
}
