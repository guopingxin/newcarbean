.serviceitem{
  width: 90%;
  margin: 0 5% 2%;
  background: white;
  display: flex;
  border-radius: 10px;
  font-size: 14px;
  position: relative;
  box-shadow: 0 0 4rpx 2rpx rgba(216, 216, 216, 0.50);
}

.serviceitem-1{
  display: flex;
  flex-direction: column;
  margin: 1% 3% 3%;
  justify-content:space-between;
}

.serviceitem-img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.bg{
  color: white;
  border-radius: 10px;
  font-size: 10px;
  text-align: center;
}

.weixiu{
  background: orange; 
  width: 90%;
  line-height: 18px;
  margin-left: 5%;
  margin-top: 10%;
}

.servicer{
  background: rgb(0, 225, 255);
  /* width: 40%; */
  padding: 0 10rpx;
  margin: 4px;
}

.tags{
  display: flex;
  flex-direction: row;
}

.serviceitem-2{
  display: flex;
  flex-direction: column;
  justify-content:space-between;
  margin: 1% 0 3%;
}

.order-comment{
  display: flex;
}

.order-comment text{
  font-size: 10px;
  padding: 10rpx 20rpx 0 10rpx;
}

.service-name{
  padding-top: 4%;
  font-weight: 600;
  width:90%;
}

.service-address{
  font-size: 10px;
  color: #a3a4a4;
  padding: 4% 0;
}

.order-img{
  width: 40rpx;
  height: 40rpx;
}

.distance{
  position: absolute;
  right:-4px;
  top: 6px;
  width: 52px;
  font-size: 10px;
  line-height: 20px;
  height: 26px;
  background: url(http://www.feecgo.com/level/Label@2x.png);
  background-size: 100% 100%; 
  color: #fff;
  letter-spacing: 0.83px;
  text-align: center
}