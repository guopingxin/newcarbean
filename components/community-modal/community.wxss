/* components/community-modal/community.wxss */

.each_dynamic {
  background: #fff;
  margin-bottom: 12px;
}

.title {
  text-align: left;
  padding: 12px 0px 6px 0px;
  display: flex;
  position: relative;
}

.each_dynamic .avatar {
  position: relative;
}

.each_dynamic .avatar .user_level {
  width: 15px;
  height: 15px;
  position: absolute;
  bottom: 4px;
  left: 34px;
}

.location {
  font-size: 10px;
  color: #b6b6b6;
}

.locationIcon {
  width: 15px;
  height: 15px;
  vertical-align: text-bottom;
  margin-right: 4px;
}

.avatar {
  margin-left: 12px;
  display: inline-block;
  vertical-align: top;
}

.avatar image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.nickname_time {
  display: inline-block;
  margin-left: 6px;
}

.nickName {
  font-size: 18px;
  font-weight: 500;
  /* color: #1a84ff; */
  margin-top: 1px;
  line-height: 30px;
}

.time {
  margin-top: 6px;
  font-size: 10px;
  color: #b6b6b6;
}

.article {
  text-align: left;
  line-height: 20px;
  font-size: 16px;
  color: #3f3f3f;
  margin: 2px 12px;

  display: -webkit-box;

  overflow: hidden;

  text-overflow: ellipsis;

  word-wrap: break-word;

  white-space: normal !important;

  -webkit-line-clamp: 2;

  -webkit-box-orient: vertical;

}

.article1{
  text-align: left;
  line-height: 20px;
  font-size: 16px;
  color: #3f3f3f;
  margin: 2px 12px;
}

.image_cell {
  padding: 4rpx 0px;
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
}
.video_cell{
  margin: 14rpx 26rpx 6rpx 26rpx;
  padding: 4rpx 0px;
  text-align: center;
  
}

.voice{
  display: flex;
  margin: 6rpx 26rpx;
  box-shadow: 0 0 4rpx 2rpx rgba(216, 216, 216, 0.50);
  align-items: center;
  width: 220rpx;
  border-radius: 30rpx;
  padding: 7rpx 16rpx;
  
}

.voice text{

  margin-left: 10rpx
}

.triangle{
  width: 24rpx;
  height: 24rpx;
}

.wave{
  width: 60rpx;
  height: 40rpx;
  margin: 0 30rpx 0 12rpx;
}

.video_cell video{
  width: 100%;
  z-index: 100;
  position: relative;
  
}

.each_image {
  display: inline-block;
  /* width: 33.3%; */
  margin-right: 12rpx;
}


.each_image image {
  width: 220rpx;
  height: 220rpx;
}




