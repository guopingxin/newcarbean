} */
.noData .text{
  width:32%;
  color: #3f3f3f7c;
}
.left-line,.right-line{
  width: 34%;
  border-top:1rpx solid #3f3f3f5d;
}

.pinglun_cell{
  text-align:left;
  padding:0px 0px 6px 0px;
  line-height:20px;
  font-size:12px;
  color:#1a84ff;
  margin:0px 12px;
}

.rating_content{
  color:#3f3f3f7c 
}

.arrow_down{
  width: 100%;
  height: 8%;
}

.arrow_down image{
  width: 6%;
  height: 40rpx;
  padding: 0 47%;
}

