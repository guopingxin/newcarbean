.zan_rating_share {
  border-top: 1rpx solid #f2f2f2;
  text-align: left;
  margin: 0px 12px;
  padding: 6px 0px;
}

.zan_rating_share image {
  width: 25px;
  height: 25px;
  vertical-align: middle;
}

.zan_rating_share view {
  display: inline-block;
  font-size: 10px;
  color: #c1c1c1;
  width: 33.3%;
  text-align: center;
}

.public_time {
  font-size: 10px;
  /* margin-right: 12px; */
  /* margin-top: 5px; */
  color: #c1c1c1;
  /* position: absolute;
  right: 20rpx; */
  margin: 0 13px 13px 13px;
}
.zan_rating_share button{
  display: inline-block;
  width: 33.3%;
  text-align: center;
  background: none;
  font-size: 10px;
  color: #c1c1c1;
  padding: 0px;

}
.zan_rating_share button image{
  vertical-align: middle;
  margin-right: 6px;
}
.zan_rating_share button::after{
  border:none;
}

.zan_rating_share button text{

  height: 40rpx;
  vertical-align: middle;
}

.noData{
  text-align: center;
  font-size: 12px;
  line-height: 30px;
  display: flex;
  align-items: center;
}
/* .noData view{
  display: inline-block;
