.modal_con {
  margin-top: 66%;
}

.modal_text {
  margin-top: 20px;
  text-align: left;
  display: inline-block;
  width: 90%;
  line-height: 60rpx;
  color: #494949;
  font-size: 30rpx;
}

.modal-left {
  vertical-align: top;
  display: inline-block;
  width: 49%;
  border-right: 1rpx solid #aaa;
  color: #494949;
  font-size: 30rpx;
}

.modal-right {
  font-size: 30rpx;
  color: green;
}

.modal_cell1 {
  position: fixed;
  bottom: 140px;
  left: 0px;
  width: 100%;
  text-align: center;
}

.modal_cell1 view {
  background: #000;
  font-size: 36rpx;
  padding: 4px 10px;
  border-radius: 4px;
  color: #fff;
  display: inline-block;
  text-align: center;
}
.modal_user{
  position: fixed;
  top:0px;
  right: 0px;
  display: inline-block;
  width:100%;
  height: 100vh;
  text-align: center;
  background: rgba(100, 100, 100, 0.5)
}
.modal_content{
  display: inline-block;
  width:80%;
  margin-top: 60%;
  padding: 0px;
}
.modal_content .content{
  padding-top: 20px;
  padding-bottom: 10px;
  border-bottom: 1rpx solid rgb(192, 192, 192);
  text-align: center;
}
.modal_content button{
  color:rgb(4, 138, 4);
  background: none;
}
.modal_content button::after{
  border:none;
}
