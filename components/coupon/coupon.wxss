/* 弹出领取优惠券 */

.container {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-content {
  width: 534rpx;
  height: 684rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 56rpx;
}

.close-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 58rpx;
  height: 58rpx;
}

.close-btn image {
  width: 58rpx;
  height: 58rpx;
}

.coupon-img {
  width: 534rpx;
  height: 526rpx;
}

.coupon-img image {
  width: 534rpx;
  height: 526rpx;
}

.coupon-btn {
  width: 298rpx;
  height: 102rpx;
}

.coupon-btn image {
  width: 298rpx;
  height: 102rpx;
}
