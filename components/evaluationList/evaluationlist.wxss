@import '../replytemplate/replytemplate.wxss';

.evaluationArr{
  display: flex;
  flex-direction: row;
  margin: 14px auto;
}

.evaluationArr1{
  display: flex;
  flex-direction: row;
  margin-top: 14px;
  /* margin-bottom: 5em; */
  padding-bottom: 10em
}

.face{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-left: 12px;
}

.level{
  width: 15px;
  height: 15px;
  margin-top: 26px;
  margin-left: -10px;
}

.eva_message{
  margin-left: 14px;
  width: 70%;
  letter-spacing:2rpx;
  line-height:22px;
  padding-bottom:3%;
  border-bottom:1px solid #f2f2f2;
}
.username{
  color: #5f5f5f;
  font-weight: 500;
  font-size: 16px;
}

.evacontent{ 
  font-size: 16px;
  line-height: 20px;
  word-break:break-all;
  margin: 1% 0 4% 0;
  /* letter-spacing: 2rpx; */
}

.time-Reply{
  display: flex;
  flex-direction: row;
}

.evatime{
  font-size: 14px;
  letter-spacing: 0;
  color: #d1d1d1
}

.evareive{
  font-size: 14px;
  color: #1a84ff;
  margin-left: 6px;
}

.frame{
  background: #f2f2f2;
  width: 100%;
  margin-top: 6px;
  padding: 4px 0 6px 10px;
}

.replytext{

  font-size: 14px;
  color: #3f3f3f;
}

.placeholder{
  display: inline-block;
  
}

.voicestyle{
  display: flex;
  box-shadow: 0 0 4rpx 2rpx rgba(216, 216, 216, 0.50);
  align-items: center;
  width: 220rpx;
  border-radius: 30rpx;
  padding: 7rpx 16rpx;
}

.triangle{
  width: 24rpx;
  height: 24rpx;
}

.wave{
  width: 60rpx;
  height: 40rpx;
  margin: 0 30rpx 0 12rpx;
}

.delete{
  display: flex;
}

.dot{
  width: 10rpx;
  height: 10rpx;
  background: #d1d1d1;
  border-radius: 50%;
  margin-right: 4rpx;
}