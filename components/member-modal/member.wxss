/* 自定义模态框组件 */

.container {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 600rpx;
  height: 420rpx;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 0 24rpx;
}

.modal-title {
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  border-bottom: 2rpx solid #d8d8d8;
  font-size: 36rpx;
  position: relative;
}

.del-icon {
  position: absolute;
  right: 24rpx;
  top: 0;
}

.del-icon image {
  width: 25rpx;
  height: 25rpx;
}

modal-form {
}

.form-input {
  height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #d8d8d8;
}

.form-input text {
  width: 132rpx;
}

.input-holder {
  font-size: 24rpx;
  color: #aeaeae;
}

.modal-btn {
  width: 480rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 35rpx;
  background-color: #488FFD;
  color: #fff;
  margin: 36rpx auto;
}
