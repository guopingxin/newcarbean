.servicelist{
  display: flex;
  flex-flow: wrap;
  margin: 3% 0 0 5%;
}
.serviceitem{
  width: 45%;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  margin-right: 5%;
  margin-bottom: 3%;
}

.serviceimg{
  width: 100%;
  border-radius: 6px;
  height: 300rpx;
}

.servicename-price{
  display: flex;
  justify-content: space-between;
}

.business{
  border-radius: 30px;
  box-shadow: 0 0 4rpx 2rpx rgba(216, 216, 216, 0.50);
  padding: 4rpx 8rpx;
  font-size: 18rpx;
  color: white;
  margin-right: 10rpx;
}

.type1{
  background: rgb(0, 225, 255);
}

.type2{
  background:orange;
}

.commont-distance{
  display: flex;
  align-items: center;
}

.order-img{
  width: 30rpx;
  height: 30rpx;
}