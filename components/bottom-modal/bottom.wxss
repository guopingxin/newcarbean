.circle{
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  border: 1px solid white;
}

.car-img {
  width: 106rpx;
  height: 106rpx;
  /* border: 1rpx solid #fff; */
  border-radius: 50%;
  margin: 24rpx 0 16rpx;
}

.car-img image {
  width: 106rpx;
  height: 106rpx;
  border-radius: 50%;
}

.carmode{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.car-item>text:first-child {
  font-size: 36rpx;
}
.car-item>text:last-child {
  font-size: 24rpx;
}
/* 添加新车辆按钮 */
.add-car-btn {
  width: 480rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #488FFD;
  color: #fff;
  border-radius: 35rpx;
  margin: 0 auto;
}
/* 关闭模态框按钮 */

.del-icon {
  position: absolute;
  right: 38rpx;
  top: 38rpx;
  width: 44rpx;
  height: 44rpx;
}

.del-icon image {
  width: 22.6rpx;
  height: 22.6rpx;
}

