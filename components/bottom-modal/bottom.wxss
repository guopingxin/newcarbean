/* 服务的底部弹出框 */

.container {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 750rpx;
  height: 570rpx;
  background: #fff;
  border-radius: 34rpx 34rpx 0 0;
  padding: 48rpx 24rpx 12rpx 24rpx;
}

.modal-bottom>text {
  display: block;
  font-size: 36rpx;
  border-bottom: 1rpx solid#E3E3E3;
  padding-bottom: 12rpx;
}

/* 服务列表 */

.service-list {
  padding-top: 36rpx;
  display: flex;
  flex-wrap: wrap;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 34rpx;
  margin-bottom: 24rpx;
}

.service-item:nth-child(4n) {
  margin-right: 0;
}

.service-item-img {
  width: 150rpx;
  height: 150rpx;
  /* background: #d8d8d8;
  border: 1px solid #979797; */
  border-radius: 30rpx;
}

/* 活动列表 */

.activity-list {
  margin-top: 36rpx;
}

/* 车库 */
/* 暂无车辆时的样式 */
.no-car {
  margin: 34rpx auto 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no-car>text {
  font-size: 24rpx;
  color: #818181;
}
.no-car-img {
  width: 280rpx;
  height: 224rpx;
  border-radius: 50%;
  /* background: #D8D8D8; */
  margin: 34rpx 0 22rpx;
}

.no-car-img image {
  width: 304rpx;
  height: 224rpx;
}
/* 有车辆列表时的样式 */

.have-car {
  margin: 16rpx 0 38rpx;
  display: inline-flex;
  align-items: center;
}
.car-item {
  width: 340rpx;
  height: 324rpx;
  border-radius: 14rpx;
  margin-right: 22rpx;
  position: relative;
  background: url(http://www.feecgo.com/level/pic_cheliangbeijing@2x.png) no-repeat left top;
  background-size: 100% 100%;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-car-item {
  width: 750rpx;
  height: 324rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #488FFD;
}

.car-text{
  width: 100%;
  text-align: center;
  font-size: 12px;
  margin-top: 6rpx;
}

.car-item-icon {
  width: 100%;
  height: 28rpx;
  flex-direction:row-reverse;
  display: flex;
  padding-right:30rpx;

  /* background: #AFAFAF; */
  /* position: absolute;
  top: 36rpx;
  right: 22rpx; */
  
}
