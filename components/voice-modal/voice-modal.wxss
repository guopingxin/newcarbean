.voicecontainer{
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  font-size: 32rpx;
  z-index: 1000;
}

.voicedialog{
  width: 100%;
  height: 400rpx;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  bottom: 0;
  z-index: 1000;
}

.title{
  position: relative;
  width: 100%;
  margin: 20rpx 0 20rpx 0;
  text-align: center;
  font-family: PingFangSC-Medium;
}

.delete{
  position: absolute;
  top:0;
  right: 40rpx;
}

.delete cover-image{
  width: 30rpx;
  height: 30rpx;
}

.voice-icon{
  display: flex;
  margin: 20rpx 0;
  width: 100%;
  align-items: center;
}

.voice-img{
  width: 150rpx;
  height: 150rpx;
}

.delete-img{
  width: 90rpx;
  height: 90rpx;
}

.voice-text{
  display: flex;
  
  width: 100%;
}

.circle_box,.circle_draw{ position: relative; }
.circle_bg{position: absolute;}

.voice-time{
  display: flex;
  
}
