/* 已领取 */

.lingqu {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.lingqu-avatar {
  width: 142rpx;
  height: 142rpx;
  border-radius: 50%;
  box-shadow: 0 0 6rpx 0 rgba(45, 105, 243, 0.5);
  margin-top: 210rpx;
}

.lingqu-avatar image {
  width: 142rpx;
  height: 142rpx;
  border-radius: 50%;
}

.lingqu-text {
  color: #36363c;
  margin-top: 38rpx;
}

.lingqu-time {
  color: #909090;
  margin-top: 18rpx;
}

.lingqu-coupon-other {
  width: 702rpx;
  height: 180rpx;
  background: url('http://www.feecgo.com/level/wlq_bg.png') no-repeat center;
  background-size: 100% 100%;
  margin-top: 112rpx;
  color: #df4646;
  padding: 32rpx 0 20rpx 76rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.lingqu-coupon {
  width: 702rpx;
  height: 180rpx;
  background: url('http://www.feecgo.com/level/pic_yzs.png') no-repeat center;
  background-size: 100% 100%;
  margin-top: 112rpx;
  color: #cbcbcb;
  padding: 32rpx 0 20rpx 76rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.lingqu-btn {
  width: 702rpx;
  height: 80rpx;
