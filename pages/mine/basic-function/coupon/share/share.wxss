/* 优惠券分享页面 */

.other-container {
  width: 100%;
}

.top-bg {
  width: 100%;
  height: 540rpx;
}

.top-bg image {
  width: 100%;
  height: 540rpx;
}

.content {
}

.receive {
  width: 666rpx;
  height: 280rpx;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 20rpx;
  margin: 0 auto 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.receive-bg {
  width: 590rpx;
  height: 194rpx;
