/* 消息通知 */

.container {
  width: 100%;
}

.message-tab {
  height: 82rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.message-tab>view {
  height: 82rpx;
  position: relative;
}

.tab-default {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #878787;
}

.tab-hover {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #000;
}

.line {
  width: 40rpx;
  height: 8rpx;
  background: #383737;
  border-radius: 4rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}

/* 系统通知 */

.system-content ul {
  width: 702rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}

.system-content ul li {
  height: 140rpx;
  box-shadow: 0 0 4rpx 2rpx rgba(221, 221, 221, 0.50);
  border-radius: 10rpx;
  margin-bottom: 12rpx;
}

.item-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 24rpx 12rpx;
}

.item-top text:last-child {
  font-size: 20rpx;
}

.item-bottom {
  padding: 0 24rpx;
  font-size: 24rpx;
}

/* 动态 */

.dynamic-item {
  padding: 0 24rpx;
  border-bottom: 6rpx solid #e9e9e9;
}

