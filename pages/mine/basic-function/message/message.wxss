/* 评论 */

.comment {
  font-size: 24rpx;
  margin-bottom: 23rpx;
  display: flex;
  flex-direction: column;
}

/* 我对评论的回复 */
.comment-reply {
  display: flex;
}
.comment-reply text {
  color:#4F93FD
}

