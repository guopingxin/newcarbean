.person-info-box {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin: 20rpx 0 12rpx;
}

.person-info {
  display: flex;
  align-items: center;
}

.person-img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: #eee;
  margin-right: 24rpx;
}

.person-img image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.person-name {
  display: flex;
  flex-direction: column;
}

.person-name text:last-child {
  font-size: 24rpx;
  color: #afafaf;
}

.reply-btn {
  width: 96rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #979797;
  border: 1rpx solid #979797;
}

/* 动态 */
.reply-dynamic {
  width: 100%;
  /* height: 140rpx; */
  background: #F2F2F2;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  padding: 24rpx;
}

.dynamic-img {
  width: 140rpx;
  height: 140rpx;
  background-color: #ccc;
}
