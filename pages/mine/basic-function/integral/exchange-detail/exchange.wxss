/* 商品兑换详情 */

.container {
}

/* 兑换详情为空 */

.exchange {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.order-list {
  width: 100%;
}

.item {
  width: 100%;
  height: 312rpx;
  border-bottom: 6rpx solid #f2f2f2;
}

.item-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
}

.item-time {
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 24rpx;
}

.item-time text:last-child {
  color: #2a92fd;
}

.item-pro {
  width: 100%;
  height: 150rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.pro-intro {
  display: flex;
  align-items: center;
}

.pro-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px solid #f2f2f2;
  margin-right: 24rpx;
}

.pro-info {
}
.pro-info text {
 color: #242729;
}

.pro-num {
  width: 94rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  opacity: 0.6;
  border: 1rpx solid #7d7d7d;
  box-shadow: 0 0 4px 0 rgba(230, 230, 230, 0.50);
  border-radius: 20rpx;
  color: #7D7D7D;
  margin-top: 16rpx;
}

.bean-num {
  color: #2a92fd;
}

.bean-num text:first-child {
  font-size: 24rpx;
}

.bean-num text:last-child {
  font-size: 40rpx;
}

.item-odd {
  width: 100%;
  height: 80rpx;
  font-size: 24rpx;
}
