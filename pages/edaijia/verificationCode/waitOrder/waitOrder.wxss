.order-state{
  width: 100%;
  text-align: center;
  font-size: 18px;
  color: #1a84ff;
  margin-top: 5%;
  letter-spacing: 2px;
  font-weight: 600
}

.order-message{
  width: 89%;
  margin: 5% 5%;
  border: 1px solid #d5d5d5;
  border-radius: 6px;
}

.order-time{
  font-size: 16px;
  padding: 5% 3%;
  border-bottom: 1px solid #d5d5d5
}

.order-time1{
  font-size: 16px;
  padding: 5% 3%;
}

.time-img{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle
}

.order-time-text{
  color: #b1b1b1
}

.a{
  vertical-align: middle;
  padding-left: 8rpx
}

.pre-time{
  width: 100%;
  text-align: center;
  font-size: 20px;
  font-weight: 600; 
  margin-top: 10%;
  letter-spacing: 2px; 
}

.miao{
  color: #ff8b03;
  margin: 0 14rpx; 
}

.send-tip{
  font-size: 14px;
  color: #d5d5d5;
  width: 100%;
  text-align: center;
  margin-top: 14rpx;
  letter-spacing: 1rpx; 
}

.canceltext{
  font-size: 14px;
  margin-top: 33rpx;
  letter-spacing: 1rpx; 
  position: absolute;
  right: 5%;
  padding: 10rpx;
  /* box-shadow:0 0 4rpx 2rpx #eee; */
  background: #1a84ff;
  color: white;
  border-radius: 10rpx;
}

.tel{
  position: fixed;
  bottom: 30rpx;
  width: 50%;
  margin-left: 25%;
  font-size: 14px;
  text-align: center
}

.tel-num{
  color: #1a84ff
}