
@import '../../../components/driverstateList/driverstateList.wxss';

.bg{
  width: 100%;
  height: 100%;
}

.tip{
  width: 100%;
  text-align: center;
  padding-top: 5%;
  font-size: 18px;
  font-weight: 600;
}

.driverstate{
  width: 89%;
  margin: 10% 5% 0;
  border: 1px solid #d5d5d5;
  border-radius: 5px;
}

.driver-information{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #d5d5d5;
  margin: 0 5%;
}

.driver-img{
  width: 90rpx;
  height: 90rpx;
  vertical-align: middle;
  border-radius: 50%;
  margin: 4% 2% 4% 4%;
}

.driver{
  display: flex;
  flex-direction: column;
  font-size: 16px;
  width: 66%;
  margin: 5% 0;
}

.tel{
  width: 50rpx;
  height: 50rpx;
  margin-top: 7%;
}

.distance{
  margin: 4% 5% 0;
  font-size: 14px;
}

.distance-num{
  color: #ff8b03;
  margin-left: 2%
}

.cancel-order{
  margin: 3% 5% 0;
  display: flex;
  justify-content:flex-end;
  font-size: 14px
}

.tel1{
  position: fixed;
  bottom: 30rpx;
  width: 50%;
  margin-left: 25%;
  font-size: 14px;
  text-align: center
}

.tel-num{
  color: #1a84ff
}

.callphone{
  position:fixed;
  font-size: 16px;
  text-align: center;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.24);
  top: 0;
  left: 0;
  z-index: 100;
 
}

.call-whole{
  position: fixed;
  bottom: 0;
  background: #fff;
  display: flex;
  flex-direction: column;
  padding-top: 4%;
  width: 100%;
  z-index: 100
}

.call-whole text{
  padding-bottom: 3%;
  font-weight: 600
}

.btn-whole{
  display: flex; 
}

.cancel-call{
  width: 50%;
  background: #d5d5d5;
  color: #fff;
  font-size: 16px;
  border-radius: 0;
  padding: 1% 0;
}

.sure-call{
  width: 50%;
  background: #1a84ff;
  color: #fff;
  font-size: 16px;
  border-radius: 0;
  padding: 1% 0;
}