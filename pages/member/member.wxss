.privilege-item {
  width: 702rpx;
  height: 160rpx;
  background: #fff;
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.10);
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 12rpx 24rpx;
}

/* .privilege-item:nth-child(4n) {
  margin-right: 0;
} */

.item-left {
  display: flex;
  align-items: center;
}

.item-text {
  display: flex;
  flex-direction: column;
}

.item-text text:first-child {
  font-size: 32rpx;
}

.item-text text:last-child {
  font-size: 26rpx;
  color: #969696;
}

.item-img {
  width: 110rpx;
  height: 110rpx;
  margin-bottom: 12rpx;
}

.item-img image {
  width: 110rpx;
  height: 110rpx;
}

.item-right {
  display: flex;
  align-items: center;
  margin-right: 26rpx;
}

.item-right text{
  color: #488FFD;
}

.next-icon {
  width: 32rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
}

.next-icon image {
  width: 12rpx;
  height: 22rpx
}


.vip-btn {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #fff;
  background: #1A84FF;
  position: fixed;
  left: 0;
  bottom: 0;
  border-radius: 0;
}
