/* pages/services/completeinformation/completeinformation.wxss */
.container{
  width: 90%;
  margin: 3% 5%;
}

.basic{
  font-family: PingFangSC-Medium;
  font-size: 24px;
}

.input-basic{
  font-family:PingFangSC-Regular;
  font-size: 14px;
  color: rgb(197, 197, 197);
}

.input{
  width: 100%;
  height: 80rpx;
  border-radius: 30px;
  box-shadow: 0 0 2rpx 4rpx rgba(216, 216, 216, 0.5);
  display: flex;
  align-items: center;
  margin-top: 20px;
  position: relative;
}

.input text{
  width: 60px;
  text-align: center;
  margin-left: 16rpx;
}

.button{
  width: 100%;
  height: 80rpx;
  background: rgb(72, 150, 240);
  color: white;
  border-radius: 30px;
  margin-top: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.code{
  color: rgb(72, 150, 240);
  font-size: 26rpx;
  position: absolute;
  right: 20rpx;
  width: 150rpx;
  text-align: center;
}