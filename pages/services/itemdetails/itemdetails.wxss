page{
  background: #eee;
}

.container{
  width: 100%;
  font-size: 12px;
  
}

.headerimg{
  width: 100%;
  height: 370rpx;
}

.nav{
  position: relative;
  top:-110rpx;
  width: 90%;
  left: 5%;
  border-radius: 5px;
}

.servicedetail{
  display: flex;
  flex-direction: column;
  background: white;
  border-radius: 5px;
  line-height:36rpx; 
  padding: 4% 3% 3% 3%;
  font-size: 14px;
  box-shadow: 0 0 4px 2px rgba(212, 212, 212, 0.50);
}

.price{
  display: flex;
  justify-content:space-between;
  border-bottom: 1px solid #eee;
  padding: 4% 0 3%;
  color: #a5a5a5;
  font-size: 12px;
  align-items: flex-end
}

.money_icon{
  color: #1a84ff;
  font-size: 14px;
  font-weight: 600
}

.value{
  font-size: 26px;
  color: #1a84ff;
  margin-right: 20rpx;
  font-weight: 600;
}

.serviceinvalid{
  text-decoration: line-through;
}

.mark{
  display: flex;
  margin-top: 3%;
}

.mark_text{
  margin: 0 14rpx 0 8rpx;
  color: #a5a5a5;
  font-size: 12px;
}

.check{
  width: 35rpx;
  height: 35rpx; 
}

.shopinfor{
  margin-top: 2%;
  padding: 4% 3% 3% 3%;
  background: white;
  border-radius: 5px;
  box-shadow: 0 0 4px 2px rgba(212, 212, 212, 0.50);
  display: flex;
  flex-direction: column;
  color: #a5a5a5;
}

.shopname{
  display: flex;
  justify-content:space-between;
  margin-bottom: 10rpx;
}

.shop{
  font-size: 16px;
  font-weight: 600;
  color: #000
}

.positionimg{
  width: 40rpx;
  height: 40rpx;
}

.ratingNull{

  font-size: 14px;
  text-align: center;
  margin-top: 40rpx;
}

.bottom{
  position: fixed;
  bottom: 0;
  background: white;
  width: 100%;
  display: flex;
  justify-content:space-around;
  border-top: 1px solid #eee;
  padding: 14rpx 5%;
}

.bottom-left{
  color: #919293;
  font-size: 12px;  
}

.serviceprice{
  color: #1a84ff;
  font-size: 18px;
  font-weight: 600;
  margin-right: 10rpx
}

.serviceinvalid{
  text-decoration: line-through;
}

.bottom-right{
  display: flex;
}

.customer{
  background: #ffbd22;
  border-top-left-radius: 20px;
  border-bottom-left-radius: 20px;
  color: white;
  display: flex;
  width: 170rpx;
  text-align: center;

}

.pay{
  background: #ff9222;
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
  color: white;
  display: flex;
  width: 170rpx;
  text-align: center;
}

.consult{
  width: 42rpx;
  height: 42rpx;
  margin-left: 20rpx;
  margin-top: 14rpx;
}

.customer_text{
  margin: 20rpx 0 0 10rpx;
}
